.address-wrap {
  position: relative;
  /* background: #fff url("./imgs/confirm_address_line.png") no-repeat bottom;  */
  background-size: 100% auto;
  margin-bottom: 15rpx;
  background-color: #fff;
}

.address-bg {
  position: absolute;
  bottom: 24rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
}

.address-bg image {
  width: 100%;
  height: 4rpx;
}

/*已有地址*/

.address {
  display: flex;
  padding: 40rpx 0;
  flex-direction: row;
}

.address-icon {
  width: 25rpx;
  height: 32rpx;
  /* background: url("./imgs/address_location.png") no-repeat center; */
  background-size: contain;
}

.address-detail {
  width: 640rpx;
  padding: 0 20rpx;
  color: #333;
}

.contacts {
  display: block;
  margin-bottom: 5rpx;
  color: #333;
}

.address-details {
  display: block;
  font-size: 24rpx;
  color: #a7a7a7;
}

.arrow2r {
  width: 17rpx;
  height: 32rpx;
  margin-top: 20rpx;
  /* background: url("./imgs/arrow2r.png") no-repeat center; */
  background-size: cover;
}

.shop-name {
  height: 85rpx;
  background: #fff;
  font-weight: bold;
  line-height: 85rpx;
  display: flex;
  justify-content: space-between;
}
.cbutton{
  width: 140rpx;
  display: flex;
  align-items: center;
  background:#fff;
  justify-content: space-between;
}
.cbutton image{
  width:33rpx;
  height:28rpx;
}
.cbutton view{
  color:#999999;
  font-size: 24rpx;
}
.cart-goods-wrap {
  background: #f7f7f7;
  /* margin-bottom: 20rpx; */
}

.cart-goods-list {
  position: relative;
  padding: 18rpx 30rpx;
  border-bottom: 10rpx solid #fff;
  background-color: f7f7f7;
  display: flex;
}

.cart-goods-list::after {
  display: block;
  content: "";
  clear: both;
}

.cart-goods-list:last-child {
  border-bottom: 0;
}

.goods-img {
  float: left;
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}

.goods-img image {
  width: 100%;
  height: 100%;
}

.goods-info {
  padding-top: 10rpx;
  width: 460rpx;
  height: 200rpx;
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}

.between {
  justify-content: space-between;
}

.goods-title {
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-quantity {
  float: right;
  line-height: 60rpx;
}

.goods-color {
  display: block;
  line-height: 60rpx;
}

.goods-price {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 60rpx;
}

.edit-quntity {
  margin-left: auto;
  right: 30rpx;
  bottom: 36rpx;
  width: 214rpx;
  height: 60rpx;
}

.edit-quntity button {
  floaT: left;
  width: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  color: #000;
  line-height: 58rpx;
  border: 1px solid #e0e0e0;
  border-radius: 0;
}

.edit-quntity button::after {
  border-radius: 0;
}

.quantitys {
  float: left;
  width: 74rpx;
  height: 60rpx;
  padding: 0 10rpx;
  color: #000;
  text-align: center;
  line-height: 60rpx;
}

.shop-amount {
  padding: 0 30rpx 30rpx;
  background: #fff;
}

.shop-amount view {
  height: 78rpx;
  line-height: 78rpx;
}

.consumer-msg text {
  float: left;
}

.msg-input {
  float: left;
  display: block;
  width: 540rpx;
  padding: 0 10rpx;
}
.shop-freight{
  /* font-size: 30rpx; */
}
.shop-freight text {
  float: right;
  /* font-size: 30rpx; */
}

.shop-total view {
  margin-left: auto;
}

.shop-total text {
  float: right;
}

.shop-total text.colred {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.flex {
  display: flex;
  align-items: center;
}

.refund {
  margin-left: auto;
  width: 115rpx;
  height: 30px;
  line-height: 30px;
  font-size: 24rpx;
  border: 1px solid #999;
  border-radius: 5px;
}
.waitpayment {
  height: 113rpx;
  background: #fff;
  font-size: 26rpx;
}

.waitpaytop {
  display: flex;
