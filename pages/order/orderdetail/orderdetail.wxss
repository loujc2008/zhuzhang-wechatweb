/* pages/order/orderdetail/orderdetail.wxss */

page {
  width: 100%;
  font-size: 26rpx;
  color: #010101;
  background: #f6f7f9;
  padding-bottom: 120rpx;
}

view, button, image, icon {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  -moz-box-sizing: border-box; /* Firefox */
  -webkit-box-sizing: border-box; /* Safari */
}

.pdlr{
  padding: 0 30rpx;
}

.color9 {
  color: #999;
}

.colred {
  color: #ff2121;
}

button[type="default"] {
  padding-left: 0;
  padding-right: 0;
  background-color: #fff;
  color: #fff;
  border: 0;
  border-radius: 0;
  text-align: center;
}

image {
  max-width: 100%;
  max-height: 100%;
}

button::after {
  border: 0;
}

.gradual-bg {
  background: linear-gradient(to right, #fa6e84, #ff4e93);
}

.input-wrap {
  border-bottom: 1px solid #ededed;
}

.input-label {
  color: #999;
}

.placeholders {
  color: #dcdcdc;
}

