  margin-top: 20rpx;
}

.order-no {
  position: relative;
  background: #fff;
  padding-top: 45rpx;
  padding-bottom: 45rpx;
}

.order-no:before {
  display: block;
  content: "";
  position: absolute;
  top: 0;
  left: 4%;
  z-index: 0;
  width: 92%;
  height: 1rpx;
  border-top: 1rpx solid #ededed;
}

.order-no text {
  line-height: 60rpx;
}

button[type="default"].obtn {
  display: inline-block;
  float: right;
  margin-top: 20rpx;
  width: 180rpx;
  height: 70rpx;
  background: #fff;
  font-size: 26rpx;
  line-height: 70rpx;
  border: 1px solid #e0e0e0;
  border-radius: 6rpx;
  color: #6f6f6f;
}

button[type="default"].obtn.s2 {
  margin-left: 20rpx;
  background: linear-gradient(to right, #fa6e84, #ff4e93);
  border: 0;
  color: #fff;
