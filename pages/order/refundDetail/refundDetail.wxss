page {
  background-color: #f7f7f7;
}

.step {
  height: 265rpx;
  background-color: #fff;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  display: flex;
}

.step-li {
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
}

.step-idx {
  display: flex;
  align-items: center;
  height: 40rpx;
  flex: 0 0 auto;
}

.step-idx > view {
  flex: 1;
}

.step-idx .dian {
  border-radius: 50%;
  color: #fff;
  background-color: #ccc;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  text-align: center;
  flex: 0 0 auto;
}

.line {
  height: 4rpx;
  background-color: #ccc;
}

.c-a .start .dian {
  background-color: #f36;
}

.c-a .start .line {
  background-color: #f36;
}

.c-a .ready .dian {
  background-color: #f36;
}

.c-a .ready .line:first-child {
  background-color: #f36;
}

.start .dian {
  background-color: #66cd73;
}

.start .line {
  background-color: #66cd73;
}

.ready .dian {
  background-color: #66cd73;
}

.ready .line:first-child {
  background-color: #66cd73;
}

.ready .step-name {
  color: #333;
}

.start .step-name {
  color: #333;
}

.step-name {
  text-align: center;
  font-size: 24rpx;
  color: #c1c1c1;
  flex: 1;
}

.step-time {
  text-align: center;
  font-size: 18rpx;
  color: #c1c1c1;
  height: 48rpx;
  flex-shrink: 0;
}

/*商品  */

.order-list {
  margin-top: 20rpx;
}

.shop-title {
  background: #fff;
  display: flex;
  justify-content: space-between;
  height: 85rpx;
  line-height: 85rpx;
  padding: 0 30rpx;
}

.shop-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  font-weight: bold;
}

.shop-title> button::after {
  border: 0;
}

.contact {
  width: 140rpx;
  display: flex;
  align-items: center;
  background: #fff;
  justify-content: space-between;
  margin: 0;
  padding: 0;
}

.contact image {
  width: 33rpx;
  height: 28rpx;
}

.contact view {
  color: #999;
  font-size: 24rpx;
  font-weight: 100;
}

.product-list {
  padding: 20rpx 30rpx;
  display: flex;
  width: 690rpx;
}

.product-list image {
  width: 200rpx;
  height: 200rpx;
}

.product-info {
  margin-left: 30rpx;
  width: 460rpx;
  font-size: 26rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  position: relative;
}

.product-name {
  display: flex;
  justify-content: space-between;
}

.product-name text:first-child {
  color: #000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-name text:last-child {
  color: #999;
}

.product-specs {
  color: #999;
}

.product-money {
  font-size: 30rpx;
}

.refund-info {
  display: flex;
  flex-flow: column nowrap;
  padding: 20rpx 30rpx 50rpx 30rpx;
  font-size: 26rpx;
  color: #999;
  background-color: #fff;
}

.refund-info>text {
  height: 50rpx;
  line-height: 50rpx;
}

.refund-info>view {
  display: flex;
  margin: 10rpx 0;
}

.upload-list {
  display: flex;
  flex-flow: row wrap;
  padding: 0 10rpx;
  flex: 1;
}

.upload-list image {
  width: 160rpx;
  height: 160rpx;
  margin-right: auto;
}

.refund-explain {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 50rpx 30rpx;
  font-size: 26rpx;
  margin-bottom: 158rpx;
}

.refund-explain view:first-child {
  padding-bottom: 30rpx;
}

.refund-explain view:last-child {
  color: #999;
  line-height: 50rpx;
}

.refund-action {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 690rpx;
  height: 108rpx;
  background-color: #fff;
  padding: 0 30rpx;
}

.refund-action>view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 108rpx;
}

.action-btn {
  font-size: 26rpx;
  color: #6f6f6f;
  border: 1rpx solid #6f6f6f;
  border-radius: 5rpx;
  width: 180rpx;
  height: 70rpx;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
}

.action-btn view {
  font-size: 20rpx;
  color: #999;
}

/*银行处理  */

.bank-process {
  margin-top: 20rpx;
  display: flex;
  flex-flow: column nowrap;
  background-color: #fff;
  padding: 50rpx 30rpx;
}

.refund-money {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  height: 50rpx;
}

.gray {
  color: #999;
}

.bank-process .refund-money:first-child view {
  font-weight: bold;
}

.bank-process .bank-step {
  background-color: #f7f7f7;
  padding: 30rpx 0;
  height: 200rpx;
}

.bank-process .bank-step-dian {
  border: 1rpx solid #ccc;
  color: #ccc;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  margin: 0 6rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  text-align: center;
  flex: 0 0 auto;
}

.start .bank-step-dian {
  border: 1rpx solid #66cd73;
  color: #66cd73;
}

.ready .bank-step-dian {
  border: 1rpx solid #66cd73;
  color: #66cd73;
}

.refuse {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 50rpx 30rpx;
}

.refuse view:first-child {
  padding-bottom: 10rpx;
  font-size: 30rpx;
  color: #ff2121;
}

.refuse view:last-child {
  color: #999;
  font-size: 24rpx;
  line-height: 50rpx;
}

.arbitration {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
  font-size: 24rpx;
  color: #999;
}

.send-goods {
  background-color: #ffe5e6;
  color: #666;
  font-size: 26rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.addres {
  padding: 30rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
  position: relative;
  background-color: #fff;
  height: 206rpx;
  box-sizing: border-box;
}

.addres text {
  line-height: 50rpx;
}

.addres-img {
  position: absolute;
  width: 750rpx;
  height: 4rpx;
  bottom: 0;
  left: 0;
}

.contact-service {
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-service button {
  border: none;
  margin: 0;
  background-color: #fff;
  font-size: 26rpx;
  color: #3391d0;
}

.contact-service button::after {
  border: none;
  margin: 0;
}

.logistics-info {
  padding: 30rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
  background-color: #fff;
}

.logistics-info view {
  line-height: 50rpx;
}

.status-time {
  font-size: 24rpx;
  color: #999;
}

.status-time text {
  color: #ff2121;
}

.refund-action .goods-receipt {
  justify-content: center;
}

/*投诉详情  */

.complaint {
  margin-top: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-flow: column nowrap;
  font-size: 26rpx;
  background-color: #fff;
}

.complaint .complaint-prompt {
  padding: 50rpx 30rpx;
  background-color: #ffe5e6;
  line-height: 30rpx;
  margin-bottom: 10rpx;
}

.complaint >view {
  display: flex;
  line-height: 50rpx;
}

.complaint text {
  color: #999;
}

.complaint .order-title {
  color: #000;
  font-weight: bold;
}

.cancel {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  background-color: #fff;
  height: 108rpx;
  line-height: 108rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ff1212;
}

.complaint navigator {
  color: #3391d0;
}

.arbitration-reason {
  border-top: 1rpx solid #f1f1f1;
  display: flex;
  flex-flow: column nowrap;
  font-size: 26rpx;
  background-color: #fff;
  padding: 30rpx;
}

.arbitration-reason>view {
  display: flex;
  align-items: center;
  line-height: 50rpx;
}

.arbitration-reason text {
  color: #999;
}
