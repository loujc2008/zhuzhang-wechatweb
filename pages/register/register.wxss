@import "../../wxss/common.wxss";

.main-title {
  padding: 40rpx 0 80rpx;
  text-align: center;
}

.h1 {
  display: block;
  font-size: 54rpx;
  font-weight: bold;
  line-height: 100rpx;
}

.h2 {
  font-size: 28rpx;
  opacity: 0.7;
}

.full-btn {
  display: block;
  margin-top: 32rpx;
  color: #fff;
}

.input-wrap {
  width: 100%;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.input-wrap input {
  font-size: 38rpx;
  text-align: center;
}

.input-label {
  display: block;
  text-align: center;
  margin-bottom: 8rpx;
  color: #bbb;
}

.placeholders {
  font-size: 38rpx;
  color: #ececec;
  text-align: center;
}

.code-input {
  position: relative;
}

.code-input input {
  width: 300rpx;
  margin: 0 auto;
}

.get-verification-code {
  position: absolute;
  top: 10rpx;
  right: 0;
  width: 149rpx;
  height: 63rpx;
  font-size: 26rpx;
  color:#fa6e84;
  background: #fff;
}

.nobor {
  background: #d2d2d2;
}
.changenobor{
  background: #fa6e84;
}
