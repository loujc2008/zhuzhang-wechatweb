@import '../minmoney/minmoney.wxss';

page {
  font-size: 26rpx;
  color: #010101;
  background: #f6f7f9;
}

page, view, button, image, icon {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  -moz-box-sizing: border-box; /* Firefox */
  -webkit-box-sizing: border-box; /* Safari */
}

.color9 {
  color: #999;
  margin-left: auto;
  display: flex;
  align-items: center;
}

.colred {
  color: #ff2121;
}

.pdlr {
  padding: 0 30rpx;
}

button {
  padding-left: 0;
  padding-right: 0;
  background-color: none;
  color: #fff;
  border: 0;
  border-radius: 0;
  text-align: center;
}

image {
  max-width: 100%;
  max-height: 100%;
}

button::after {
  border: 0;
}

.gradual-bg {
  background: linear-gradient(to right, #fa6e84, #ff4e93);
}

.input-wrap {
  border-bottom: 1px solid #ededed;
}

.input-label {
  color: #999;
}

.placeholders {
  color: #dcdcdc;
}

/************start
*订单 start
 1.地址
 2.商家 + 订单商品（可编辑状态数量） + 买家留言 +快递费+ 小计
********************/

.address-wrap {
  position: relative;
  background-size: 100% auto;
  margin-bottom: 15rpx;
  background-color: #fff;
}

.address-bg1 {
  position: absolute;
  top: 0rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
}

.address-bg1 image {
  width: 100%;
  height: 4rpx;
}

.address-bg {
  position: absolute;
  bottom: 24rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
}

.address-bg image {
  width: 100%;
  height: 4rpx;
}

/*已有地址*/

.address {
  display: flex;
  padding: 40rpx 0;
  flex-direction: row;
}

.address-icon {
  width: 25rpx;
  height: 32rpx;
  background-size: contain;
}

.address-detail {
  width: 640rpx;
  padding: 0 20rpx;
  color: #333;
}

.contacts {
  display: block;
  margin-bottom: 5rpx;
  color: #333;
}

.address-details {
  display: block;
  font-size: 24rpx;
  color: #a7a7a7;
}

.arrow2r {
  width: 17rpx;
  height: 32rpx;
  margin-top: 20rpx;
  background-size: cover;
}

/*还没有地址的情况下显示，已有地址、隐藏*/

.no-address-yet {
  padding: 70rpx 0 38rpx;
}

.add-address-btn {
  width: 69rpx;
  height: 86rpx;
  margin: 0 auto;
  background-repeat: no-repeat;
  background-size: cover;
}

.no-daddress-tips {
  display: block;
  margin-top: 30rpx;
  text-align: center;
  line-height: 30rpx;
}

.shop-name {
  height: 85rpx;
  background: #fff;
  font-weight: bold;
  line-height: 85rpx;
  display: flex;
  justify-content: space-between;
}

.cbutton {
  width: 140rpx;
  display: flex;
  align-items: center;
  background: #fff;
  justify-content: space-between;
}
.cbutton image{
  width:33rpx;
  height:28rpx;
}
.cbutton view{
  color:#999999;
  font-size: 24rpx;
}
.cart-goods-wrap {
  background: #f7f7f7;
  margin-bottom: 20rpx;
}

page {
  padding-bottom: 180rpx;
}

.cart-goods-list {
  padding: 18rpx 30rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  border-bottom: 20rpx solid #fff;
}

.cart-goods-list:last-child {
  border-bottom: 0;
}

.goods-img {
  flex: 1 0 auto;
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}

.goods-img image {
  width: 100%;
  height: 100%;
}

.goods-info {
  height: 200rpx;
  width: 460rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}

.goods-title {
  line-height: 30rpx;
}

.between {
  justify-content: space-between;
}

.goods-quantity {
  float: right;
  line-height: 60rpx;
}

.goods-color {
  display: block;
  line-height: 30rpx;
  margin-left: 0;
  font-size: 26rpx;
}

.discounted-info {
  font-size: 22rpx;
  color: #999;
}

.old-money {
  text-decoration: line-through;
  color: #999;
  font-size: 24rpx;
  margin-left: 18rpx;
  line-height: 60rpx;
}

.goods-price {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 60rpx;
}

.edit-quntity {
  margin-left: auto;
  right: 30rpx;
  bottom: 36rpx;
  width: 214rpx;
  height: 60rpx;
}

.edit-quntity button {
  floaT: left;
  width: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  color: #000;
  line-height: 58rpx;
  border: 1px solid #e0e0e0;
}

.quantitys {
  float: left;
  width: 74rpx;
  height: 60rpx;
  padding: 0 10rpx;
  color: #000;
  text-align: center;
  line-height: 60rpx;
}

.shop-amount {
  padding: 0 30rpx 30rpx;
  background: #fff;
}

.shop-amount view {
  height: 78rpx;
  line-height: 78rpx;
}

.consumer-msg {
  align-items: center;
}

.consumer-msg text {
  float: left;
}

.msg-input {
  display: block;
  width: 540rpx;
  padding: 0 10rpx;
  color:#dcdcdc;
}

.shop-freight text {
  float: right;
  font-size: 30rpx;
}

.shop-total text {
  float: right;
}

.shop-total text.colred {
  margin-left: 20rpx;
  font-size: 30rpx;
}

/************ end
*订单 start
 1.地址
 2.商家 + 订单商品（可编辑状态数量） + 买家留言 +快递费+ 小计
********************/

/*************订单底部 start********************/

.confirm-btm {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 108rpx;
  background: #fff;
}

.order-amount {
  float: left;
  padding-right: 0;
  font-size: 32rpx;
  line-height: 108rpx;
}

.order-amount._price {
  color: #ff0202;
  font-weight: bold;
}

button[type="default"].confirm-btn {
  color: #fff;
}

.confirm-btn {
  float: right;
  width: 258rpx;
  height: 100%;
  font-size: 30rpx;
  line-height: 108rpx;
  text-align: center;
}

.fororder {
  padding: 30rpx;
  background-color: #fff;
  font-size: 26rpx;
}

.fororder>text {
  color: #a1a1a1;
  margin-left: 30rpx;
}

.open-for {
  margin-left: 20rpx;
}

/*************订单底部 end********************/

.flex {
  display: flex;
  flex-flow: row nowrap;
}
