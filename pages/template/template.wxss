  font-size: 26rpx;
  line-height: 70rpx;
  border: 1px solid #e0e0e0;
  border-radius: 6rpx;
  color: #6f6f6f;
}

button[type="default"].obtn.s2 {
  margin-left: 20rpx;
  background: linear-gradient(to right, #fa6e84, #ff4e93);
