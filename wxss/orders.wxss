/* pages/confirmorder/confirmorder.wxss */

page {
  width:100%;
  font-size:26rpx;
  color:#010101;
  background: #f6f7f9;
  padding-bottom:108rpx;
}

/************start
*订单 start
 1.地址
 2.商家 + 订单商品（可编辑状态数量） + 买家留言 +快递费+ 小计
********************/
.address-wrap{
  position: relative;
  background: #fff url("./imgs/confirm_address_line.png") no-repeat bottom; 
  background-size: 100% auto;
  margin-bottom: 15rpx;
}

.address-bg{
  position: absolute;
  bottom:24rpx;
  left:0;
  width:100%;
  height:4rpx;
}
.address-bg image{
  width:100%;
  height:4rpx;
}

/*已有地址*/
.address{
  display: flex;
  padding:40rpx 0;
  flex-direction:row;
}

.address-icon{
  width:25rpx;
  height:32rpx;
  background: url("./imgs/address_location.png") no-repeat center;
  background-size: contain;
}

.address-detail{
  width:640rpx;
  padding:0 20rpx;
  color:#333;
}

.contacts{
  display: block;
  margin-bottom: 5rpx;
  color:#333;
}

.address-details{
  display: block;
  font-size:24rpx;
  color:#a7a7a7;
}

.arrow2r{
  width:17rpx;
  height:32rpx;
  margin-top:20rpx;
  background: url("./imgs/arrow2r.png") no-repeat center;
  background-size: cover;
}

.shop-name{
  height:85rpx;
  background: #fff;
  font-weight: bold;
  line-height: 85rpx;
}

.cart-goods-wrap{
  background: #f7f7f7;
  margin-bottom: 20rpx;
}

.cart-goods-wra:last-child{
   margin-bottom:0;
}

.cart-goods-list{
  position: relative;
  padding:18rpx 30rpx;
  border-bottom:20rpx solid #fff;
}
.cart-goods-list::after{
  display:block;
  content:"";
  clear: both;
}

.cart-goods-list:last-child{
  border-bottom:0;
}

.goods-img{
  float: left;
  width:200rpx;
  height:200rpx;
  margin-right:30rpx;
}

.goods-img image{
  width:100%; 
  height:100%;
}

.goods-info{
padding-top: 10rpx;
}

.goods-title{
  line-height: 60rpx;
}

.goods-quantity{
  float:right;
  line-height: 60rpx;
}

.goods-color{
  display: block;
  line-height: 60rpx;
}

.goods-price{
  font-size:30rpx;
  font-weight: bold;
  line-height: 60rpx;
}

.edit-quntity{
  position: absolute;
  right:30rpx;
  bottom:36rpx;
  width:214rpx;
  height:60rpx;
}

.edit-quntity button{
  floaT:left;
  width:60rpx;
  height:60rpx;
  font-size:30rpx;
  color:#000;
  line-height:58rpx;
  border:1px solid #e0e0e0;
}

.quantitys{
  float:left;
  width:74rpx;
  height:60rpx;
  padding:0 10rpx;
  color:#000;
  text-align: center;
  line-height: 60rpx;
}

.shop-amount{
  padding: 0 30rpx 30rpx;
  background: #fff;
}

.shop-amount view{
  height:78rpx;
  line-height: 78rpx;
}

.consumer-msg text{
  float:left;
}

.msg-input{
  float:left;
  display: block;
  width:540rpx;
  padding:0 10rpx;
  margin-top: 18rpx;
}

.shop-freight text{
  float:right;
  font-size:30rpx;
}

.shop-total text{
  float:right;
}

.shop-total text.colred{
  margin-left: 20rpx;
  font-size:30rpx;
}
/************ end
*订单 start
 1.地址
 2.商家 + 订单商品（可编辑状态数量） + 买家留言 +快递费+ 小计
********************/


/*************订单底部 start********************/
.confirm-btm{
  position:fixed;
  bottom:0;
  left:0;
  z-index: 99;
  width:100%;
  height:108rpx;
  background: #fff;
}

.order-amount{
  float:left;
  padding-right:0;
  font-size:32rpx;
  line-height: 108rpx;
}

.order-amount._price{
  color:#ff0202;
  font-weight: bold;
}

button[type="default"].confirm-btn{
  color:#fff;
}

.confirm-btn{
  float:right;
  width:258rpx; 
  height:100%;
  font-size:30rpx;
  line-height: 108rpx;
  text-align:center;
}

/*************订单底部 end********************/